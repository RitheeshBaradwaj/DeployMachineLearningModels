[Unit]
Description=Simplified Flask Service
After=syslog.target

[Service]
Type=simple
User=<%= @username %>
WorkingDirectory=/FeedbackApp-<%= @instance_name %>
ExecStart=/bin/bash -c 'sudo python3 -u /FeedbackApp-<%= @instance_name %>/app.py <%= @port%>'
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.targeti